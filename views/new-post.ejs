<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <!-- <link rel="stylesheet" href="fonts/icomoon/style.css"> -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous">
        <link rel="stylesheet" href="fonts/icomoon/style.css">
        <link rel="stylesheet" href="css/menu.css">
        <link rel="stylesheet" href="css/styles.css" />

        <title>Post Pulse</title>
    </head>
    <body>

        <div class="container">

            <%- include("partials/header.ejs") %>

            <div class="row mb-5" style="margin-top: 100px;">
                <% 
                    if(locals.post){
                        %>
                        <form action="/save-post?id=<%=post.id%>" method="post">
                    <div class="col-12 d-flex flex-row justify-content-between">
                        <h2 class="publish-title">Edit Your Post</h2>
                        <button type="submit" class="btn"
                            style="background-color: #6F4E37; color: #FED8B1;">Save</button>
                    </div>
                    <div class="col-12 mt-4">
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label for="exampleFormControlInput1"
                                    class="form-label">Post Title</label>
                                <input type="text" class="form-control"
                                    id="exampleFormControlInput1"
                                    placeholder="Your title..." name="title" value="<%=post.title%>"/>
                            </div>
                            <div class="col-12 mb-3">
                                <label for="exampleFormControlTextarea1"
                                    class="form-label">Enter your
                                    content</label>
                                <textarea class="form-control"
                                    id="exampleFormControlTextarea1"
                                    placeholder="Your content..." rows="10"
                                    style="color: #6F4E37;" name="content"><%=post.content%></textarea>
                            </div>
                        </div>
                    </div>
                </form>
                        <%
                    }else{
                        %>
                        <form action="add-post" method="post">
                    <div class="col-12 d-flex flex-row justify-content-between">
                        <h2 class="publish-title">Publish Your Post</h2>
                        <button type="submit" class="btn"
                            style="background-color: #6F4E37; color: #FED8B1;">Publish</button>
                    </div>
                    <div class="col-12 mt-4">
                        <div class="row">
                            <div class="col-12 mb-3">
                                <label for="exampleFormControlInput1"
                                    class="form-label">Post Title</label>
                                <input type="text" class="form-control"
                                    id="exampleFormControlInput1"
                                    placeholder="Your title..." name="title"/>
                            </div>
                            <!-- <div class="col-12 mb-3">
                                <label for="post-category"
                                    class="form-label">Post Category</label>
                                <select class="form-select"
                                    aria-label="Default select example"
                                    id="post-category" style="color: #6F4E37;">
                                    <option selected>Select Category</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div> -->
                            <div class="col-12 mb-3">
                                <label for="exampleFormControlTextarea1"
                                    class="form-label">Enter your
                                    content</label>
                                <textarea class="form-control"
                                    id="exampleFormControlTextarea1"
                                    placeholder="Your content..." rows="10"
                                    style="color: #6F4E37;" name="content"></textarea>
                            </div>
                        </div>
                    </div>
                </form>
                        <%
                    }
                    
                    %>
            </div>

        </div>

        <!-- footer  -->
        <%- include("partials/footer.ejs") %>
        <!-- footer  -->


        <!-- <div class="hero"></div> -->

        <script
            src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
            integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
            crossorigin="anonymous"></script>
        <script src="js/jquery.sticky.js"></script>
        <script src="js/main.js"></script>
    </body>
</html>