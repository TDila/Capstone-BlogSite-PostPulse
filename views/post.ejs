<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- <link rel="stylesheet" href="fonts/icomoon/style.css"> -->
    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
            crossorigin="anonymous">
    <link rel="stylesheet" href="fonts/icomoon/style.css">
    <link rel="stylesheet" href="css/menu.css">
    <link rel="stylesheet" href="css/styles.css"/>

    <title>Post Pulse</title>
  </head>
  <body>

    <div class="container">

      <%- include("partials/header.ejs") %>

      <div class="row mb-5" style="margin-top: 100px;">
        <% 
          if(locals.post){
            %>
            <div class="d-flex flex-row justify-content-end">
              <a href="new-post?id=<%=post.id%>" class="btn"
                            style="background-color: #6F4E37; color: #FED8B1;">Edit</a>
            </div>
            <div class="d-flex flex-row justify-content-between align-items-center">
              <h1><%=post.title%></h1>
              <span style="color: #A67B5B;"><%=post.datetime%></span>
            </div>
            <div class="row">
              <p style="text-align: justify; color: #6F4E37;"><%=post.content%></p>
            </div>
            <%
          }  
          
        %>
      </div>
      
    </div>


    <!-- <div class="hero"></div> -->

    <!-- footer  -->
    <%- include("partials/footer.ejs") %>
    <!-- footer  -->

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"></script>
    <script src="js/jquery.sticky.js"></script>
    <script src="js/main.js"></script>
  </body>
</html>